<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.PlaceBidActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_below="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="Select Your Country" />

            <com.hbb20.CountryCodePicker
                android:id="@+id/country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ccp_autoDetectCountry="false"
                app:ccp_defaultNameCode="ae"
                app:ccp_showNameCode="false"
                app:ccp_showFullName="true"
                app:ccp_showPhoneCode="false"
                android:padding="5dp"
                app:ccpDialog_showPhoneCode="false"
                app:ccp_contentColor="@color/black"
                app:ccpDialog_background="@drawable/text_bg"
                app:ccpDialog_textColor="@color/black"
                app:ccpDialog_showCloseIcon="true"
                android:background="@drawable/text_bg"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="Bid Place In Country" />

            <com.hbb20.CountryCodePicker
                android:id="@+id/countryTo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ccp_autoDetectCountry="false"
                app:ccp_defaultNameCode="eg"
                app:ccp_showNameCode="false"
                app:ccp_showFullName="true"
                app:ccp_showPhoneCode="false"
                android:padding="5dp"
                app:ccpDialog_showPhoneCode="false"
                app:ccp_contentColor="@color/black"
                app:ccpDialog_background="@drawable/text_bg"
                app:ccpDialog_textColor="@color/black"
                app:ccpDialog_showCloseIcon="true"
                android:background="@drawable/text_bg"
                android:gravity="center"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxBackgroundColor="@color/grey"
                app:helperText="in your currency"
                style="@style/Widget.Material3.TextInputLayout.FilledBox"
                android:hint="Your Amount">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="numberDecimal" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cornerRadius="12dp"
                android:padding="12dp"
                android:textSize="16sp"
                android:layout_marginTop="12dp"
                android:text=" Place Bid" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>